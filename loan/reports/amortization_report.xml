                        <div style="display:flex; justify-content:space-between; flex-direction:row; width:100%; border:1px solid blue; display: -webkit-box; display: -moz-box; display: -ms-flexbox; display: -webkit-flex;">
                            <div>
                                <p>Loan Amortization</p>
                            </div>

                            <div>
                                <t t-foreach="docs" t-as="o">
                                    <p>Name: <t t-esc="o.company_name"/></p>
                                    <p>ID No. <t t-esc="o.company_name"/></p>
                                    <p>ID Loan. <t t-esc="o.company_name"/></p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
        </template>
    </data>
</odoo>

