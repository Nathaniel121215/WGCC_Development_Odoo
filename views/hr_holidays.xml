<odoo>
    <data>
        <record id="true_move_edit_holiday_new" model="ir.ui.view">
            <field name="name">true.move.edit.holiday.new</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">
                <!-- Add Domain field -->
                <xpath expr="//form/sheet/group[1]" position="before">
                    <field name="domain_id_domain" invisible="True"/>
                    <field name="department_id_domain" invisible="True"/>
                </xpath>
                <xpath expr="//form/sheet/group[1]/group[2]/field[@name='category_id']" position="after">
                    <field name="domain_id" domain="domain_id_domain" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" attrs="{'readonly':[('state','!=','draft')]}" required="True"/>
                </xpath>
                <xpath expr="//form/sheet/group[1]/group[2]/field[@name='department_id']" position="attributes">
                    <attribute name="groups"/>
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_create_edit': True}</attribute>
                    <attribute name="domain">department_id_domain</attribute>
                    <attribute name="required">True</attribute>
                </xpath>
            </field>
        </record>
        <record id="true_move_custom_view_holiday_simple" model="ir.ui.view">
            <field name="name">true.move.custom.view.holiday.simple</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="etsi_hrms.custom_view_holiday_simple"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree decoration-danger="state in ('refuse','cancel')" decoration-info="state == 'draft'" string="Leaves Summary">
                        <field name="employee_id"/>
                        <field name="category_id" invisible="1"/>
                        <field name="department_id" invisible="1"/>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="number_of_days" string="Number of Days/Hours"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="holiday_status_id"/>
                        <field name="manager_id" invisible="1"/>
                        <field name="user_id" invisible="1"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>
        <record id="true_move_custom_edit_holiday_new" model="ir.ui.view">
            <field name="name">true.move.custom.edit.holiday.new</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="etsi_hrms.custom_edit_holiday_new"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group" position="replace">
                    <group>
                        <field name="name" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="holiday_status_id" widget="selection" context="{'employee_id':employee_id}" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="date_from" attrs="{'required':[('type', '=', 'remove')],'invisible': [('type', '=', 'add')],'readonly':[('state','not in',['draft'])]}" />
                        <field name="req_type" required="1" attrs="{'invisible':[('type','=','add')],'readonly':[('state','not in',['draft'])]}" options="{'no_create': True, 'no_open': True}"/>
                        <field name="number_of_days_temp" string="Duration" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="date_to" string="End Date" class="oe_inline"  />
                    </group>
                </xpath>
            </field>
        </record>
        <!-- LEAVE CANCELLATION -->
        <record id="true_move_etsi_approver_edit_holiday_new" model="ir.ui.view">
            <field name="name">true.move.etsi.approver.edit.holiday.new</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="etsi_hrms_approvers.etsi_approver_edit_holiday_new"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="attrs">{'invisible':['|','|',('state','not in',('validate1','validate','waiting_to_cancel')),('req_cancel','=',False),('type','=','add')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_refuse_cancel']" position="attributes">
                    <attribute name="attrs">{'invisible':['|','|',('state','not in',('validate1','validate','waiting_to_cancel')),('req_cancel','=',False),('type','=','add')]}</attribute>
                </xpath>
            </field>
        </record>
        <record id="etsi_hrms.open_department_holidays_cancellation" model="ir.actions.act_window">
            <field name="name">Leaves to Cancel</field>
            <field name="res_model">hr.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','in',('validate1','validate','waiting_to_cancel')),('req_cancel','=',True)]</field>
        </record>
        <!-- LEAVE CANCELLATION - END -->
    </data>
  </odoo>