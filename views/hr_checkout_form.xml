<odoo>
<data>


    <record id="hr_checkout_view_form" model="ir.ui.view">
            <field name="name">hr.checkout.view.form</field>
            <field name="model">hr.checkout.form</field>
            <field name="type">form</field> 
            <field name="arch" type="xml">
                <form create="false" options="{'no_footer': True}">
                    <sheet>
                        <!-- Add more fields here -->
                        <field name="name" string="Name" />
                    </sheet>
                    <footer>
                            <button name="process_form_submission" string="Submit" type="object" class="btn btn-primary hr-checkout-submit-button"/>
                    </footer>
                </form>
            </field>
	</record>

    <record id="action_hr_support_hour" model="ir.actions.act_window">
        <field name="name">Checkout Forms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.checkout.form</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_checkout_view_form"/>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>

</data>
</odoo> 