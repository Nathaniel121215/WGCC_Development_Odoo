<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="true_move_view_country_form" model="ir.ui.view">
            <field name="name">true.move.view.country.form</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form"/>
            <field name="arch" type="xml">
                <!-- Added default country checkbox on country view -->
                <xpath expr="//form/group[1]/group[1]/field[@name='code']" position="after">
                    <field name="is_default_country"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>