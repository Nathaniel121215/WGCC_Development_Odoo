<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="true_move_etsi_approver_hr_timesheet_sheet_form" model="ir.ui.view">
            <field name="name">true.move.etsi.approver.hr.timesheet.sheet.form</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="etsi_hrms_approvers.etsi_approver_hr_timesheet_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_timesheet_draft']" position="attributes">
                    <attribute name="states">confirm</attribute>
                    <attribute name="string">Reset to Draft</attribute>
                </xpath>
            </field>
        </record>
        <record id="true_move_timesheet_overtime" model="ir.ui.view">
            <field name="name">true.move.timesheet.overtime</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="hr_employee_time_clock.timesheet_overtime"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='contract_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="after">
                    <field name="address_id_display" string="Company" readonly="True" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                </xpath>
                <!-- move generate button before approve -->
                <xpath expr="//button[@name='get_analysis']" position="replace"/>
                <xpath expr="//header/button[@name='action_timesheet_done']" position="before">
                    <button name="get_analysis" string="GENERATE" type="object" states="new,draft,confirm" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
        <record id="true_move_hrms_timesheet_form_view" model="ir.ui.view">
            <field name="name">true.move.hrms.timesheet.form.view</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="etsi_hrms.hrms_timesheet_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='working_hours']" position="before">
                    <field name="contract_id_display" string="Contract" readonly="True" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>
        <record id="true_move_hr_timesheet_sheet_form" model="ir.ui.view">
            <field name="name">true.move.hr.timesheet.sheet.form</field>
            <field name="model">hr_timesheet_sheet.sheet</field>
            <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group[1]/group[1]" position="after">
                    <group>
                        <field name="domain_id" string="Domain" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" invisible="True"/>
                        <field name="domain_id_display" string="Domain" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" readonly="True"/>
                        <field name="department_id" string="Department" options="{'no_open':True, 'no_create_edit':True, 'no_create':True}" invisible="True"/>
                        <field name="department_id_display" string="Department" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" readonly="True"/>
                    </group>
                </xpath>
                <xpath expr="//form/sheet/group[1]/group[1]/field[@name='company_id']" position="after">
                    <field name="month_grace_period_used" widget="float_time" invisible="True"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>